#esempio configurazione per entrare su una vm che passa da un bastio

Host bastion
  HostName <ip_macchina_bastion_knoking>   #ip del bastion
  User ec2-user
  IdentityFile ~/.ssh/sshkey
  ProxyCommand ~/.ssh/script.bat %h %p

Host vm1
  HostName <ip_vm_>  #ip della vm che passa per il bastion
  User ec2-user
  IdentityFile ~/.ssh/sshkey
  ProxyCommand ssh -x -a -q bastion -W %h:%p
